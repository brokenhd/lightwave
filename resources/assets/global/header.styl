#header
	background white
	text-transform uppercase
	position fixed
	top 0
	left 0
	right 0
	height header-height
	z-index header-z
	padding 10px

	.logo
		position relative
		float left
		max-height header-height - 20px
		max-width 100%

	.navigation
		float right

	// transitions
	&.load-in

		.logo
			transform translateX(-500px)
			transition transform 300ms 800ms ease-in-out

		.navigation
			transform translateY(-100%)
			transition transform 300ms 500ms ease-in-out

	&.in-viewport

		.logo
			transform translateX(0)

		.navigation
			transform translateY(0)
