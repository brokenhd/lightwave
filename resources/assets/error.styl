@import url('//fonts.googleapis.com/css?family=Podkova:700,400')

body
	background #EEE

#main
	width 75%
	margin auto
	padding-top 15%

h1
	margin-bottom 20px
	font-size 64px
	color darken(#EEE, 10%)
	font-family 'Podkova', serif
	font-weight 700

.view
	box-shadow inset 2px 2px 4px rgba(black, .2)
	border-radius 8px
	padding 20px
	background white
	font-family 'Podkova', serif
	font-size 16px
	color #666

a
	color #666
	text-decoration underline
	&:hover, &:active
		color #000
